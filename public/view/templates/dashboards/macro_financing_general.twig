                        <td>{{benef['name']}}</td>
                        <td>{{selDevSym}}&nbsp;{{(funding_target*benef['share']/100)|number_format(2,'.',',')}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endmacro %}


