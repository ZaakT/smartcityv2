    <table id="reco_table" class='table table-lg table-bordered table-responsive-lg'>
        <thead class="thead-light text-center">
            <tr>
                <th colspan=2 class="text-uppercase">Business Model Recommendations</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="item">Best Fit</td>
                <td class="bg-success res">{{listBMReco[reco[1]]['name']}}</td>
            </tr>
            <tr>
                <td class="item">Second Choice</td>
                <td class="bg-warning res">{{listBMReco[reco[2]]['name']}}</td>
            </tr>
            <tr>
                <td class="item">Not Recommanded</td>
                <td class="bg-danger res">{{listBMReco[reco[3]]['name']}}</td>
            </tr>
        </tbody>
    </table>
</div>
{% endmacro %}

