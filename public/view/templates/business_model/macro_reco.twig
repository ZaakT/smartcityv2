{% macro list_funding_opt(funding_opt) %}
{% set color = ['bg-light','bg-danger','bg-warning','bg-primary','bg-success'] %}
{% set level = ['Unlikely','Low','Moderate','High','Top'] %}
<div class="col list-table funding_opt_table">
    <table id="funding_opt_table" class='table table-lg table-bordered table-responsive-lg'>
        <thead class="thead-light text-center">
            <tr>
                <th colspan=2 class="text-uppercase">Proposed share of funding options </th>
            </tr>
        </thead>
        <tbody>
            {% for item,value in funding_opt %}
            <tr>
                <td class="item">{{level[value]}}</td>
                <td class="font-weight-bold text-center text-dark {{color[value]}}">{{item}}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endmacro %}