{% macro list_infos(BM_infos) %}
<div class="col list-table infos_table">
    <table id="infos_table" class='table table-lg table-bordered table-responsive-lg'>
        <thead class="thead-light text-center">
            <tr>
                <th colspan=2 class="text-uppercase">project constraints &amp; features</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="item">Investment Capacity</td>
                <td class="text-primary bg-light res">{{BM_infos['invest_cap']}}</td>
            </tr>
            <tr>
                <td class="item">Payback</td>
                <td class="text-primary bg-light res">{{BM_infos['payback_const']}}</td>
            </tr>
            <tr>
                <td class="item">Business Model</td>
                <td class="text-primary bg-light res">{{BM_infos['bm_pref']}}</td>
            </tr>
        </tbody>
    </table>
</div>
{% endmacro %}

{% macro list_reco(reco,listBMReco) %}
