{% macro list_crit_cat(critCat, isTaken = false, nbCrit = []) %}
{% import "/templates/admin/modal_crit_cat.twig" as modal %}

<div class="row text-center">
    <h6 id="createCategoryHelp" class="col text-danger font-italic">{{ isTaken ? "name already taken" : "" }}</h6>
</div>
<div class="row  m-5  text-center">
    <div class="offset-1 col-10 list-table">
        <table class='table table-bordered table-striped table-responsive-lg'>
            <thead class="thead-dark text-center sticky-top">
                <tr>
                    <th scope="col" style="width: 10%;">id</th>
                    <th scope="col" style="width: 50%;">Name</th>
                    <th scope="col" style="width: 30%;">Nb of Use Cases</th>
                    <th scope="col" style="width: 10%;"></th>
                </tr>
            </thead>
            {% for category in critCat %}
                <tr id = "category_{{ category['id'] }}" scope="row">
                    <td class="check-col">{{ category['id'] }}</td>
                    <td>{{ category['name'] }}</td>
                    <td>{{ nbCrit[category['id']] }}</td>
                    <td><a href="#"><span class="oi oi-trash text-dark" title="trash" aria-hidden="true" data-toggle="modal" data-target="#askDeleteCategory_{{ category['id'] }}"></span></a></td>
                    {{ modal.delete_category(category['id'],category['name']) }}
                </tr>
            {% endfor %}
        </table>
    </div>
</div>
{% endmacro %}