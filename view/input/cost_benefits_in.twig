{% extends '/templates/common_page.twig' %}

{% import "/templates/navbar.twig" as navbar %}
{% block navbar %}{{ navbar.navbar(is_connected,is_admin,devises) }}{% endblock %}

{% import "/templates/sidebar.twig" as sidebar %}
{% block sidebar %}
{{ sidebar.sidebar("cost_benefits") }}
{% endblock %}



{% block content %}
<div class="">
    <div class="col m-5">

        <div class="row">
        
            <div class="col-lg-3">
                <img src="./../../public/img/contenu/iucProjDev.png" class="img-fluid" alt="Responsive image"></img>
            </div>
            <div class = "col-lg-6">
                <img src="./../../public/img/contenu/projInput.PNG" class="img-fluid" alt="Responsive image"></img>
            </div>
        </div>

        <div class = "col align-items-center" >
            <h2 class="text-center">{% block title %}
            {% if sideBarName == "input_project_common_supplier" %}
                Supplier BC - IPC
            {% elseif sideBarName == "input_project_common" %}
                Customer BC - IPC
            {% elseif sideBarName == "input_use_case" %}
                Customer BC - IUC
            {% else %}
            <br>
                Cost Benefit Assessment
                <br> Input Section
            {% endif %}
            {% endblock %}</h2>
        </div>
    </div>
</div>
<div class="row jumbotron text-light bg-dark m-5 p-3">
    <div class="col text-center">
        <h5>The following Section is intended to capture detailed components of each Use Case</h5>
    </div>
</div>
<div class="row text-center text-dark">
    <a href="?A=cost_benefits&amp;A2=project_cb" class="offset-5 col-2 oi oi-arrow-circle-right next-button" title="arrow-circle-right" style="font-size: 50px;" aria-hidden="true"></a>
</div>
{% endblock %}

{% block scripts %}
<script type="text/javascript" src="../../public/assets/js/custom/cost_benefits_in/prereq_costBenefits.js"></script>
<script type="text/javascript" src="../../public/assets/js/custom/cost_benefits_in/capexForm.js"></script>
<script type="text/javascript" src="../../public/assets/js/custom/cost_benefits_in/implemForm.js"></script>
<script type="text/javascript" src="../../public/assets/js/custom/cost_benefits_in/opexForm.js"></script>
<script type="text/javascript" src="../../public/assets/js/custom/cost_benefits_in/revenuesForm.js"></script>
<script type="text/javascript" src="../../public/assets/js/custom/cost_benefits_in/cashreleasingForm.js"></script>
<script type="text/javascript" src="../../public/assets/js/custom/cost_benefits_in/widercashForm.js"></script>
<script type="text/javascript" src="../../public/assets/js/custom/cost_benefits_in/quantifiableForm.js"></script>
<script type="text/javascript" src="../../public/assets/js/custom/cost_benefits_in/noncashForm.js"></script>
<script type="text/javascript" src="../../public/assets/js/custom/cost_benefits_in/risksForm.js"></script>
{% endblock %}