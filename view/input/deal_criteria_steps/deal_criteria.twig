


{% extends '/others/general_common.twig' %}

{% import "/templates/navbar.twig" as navbar %}
{% block navbar %}{{ navbar.navbar(is_connected,is_admin,devises) }}{% endblock %}

{% import "/templates/sidebar.twig" as sidebar %}
{% import "/templates/second_bar.twig" as second_bar %}

{% block sidebar %}{{ sidebar.sidebar(sideBarName) }}{% endblock %}
{% block title %}Deal Criteria{% endblock %}

{% if side == "customer" or side == "" %}
    {% import "/templates/deal_criteria/macro.twig" as macros %}
    {% set lorem = 'Define the Target level and "No Go" thresholds for the Deal across a selection of Financial, Societal & non monetisable impact metrics.' %}
{% else %}
    {% import "/templates/deal_criteria/macro_supplier.twig" as macros %}
    {% set lorem = 'Define the Target level and "No Go" thresholds for the project across a selection of Financial Metrics.' %}
{% endif %}

{% block content %}


{{ second_bar.second_bar(username,is_admin,selDevName,selDevSym,part,selected) }}

<div class="row jumbotron text-light bg-dark m-5 p-3">
    <div class="col text-center">
        {{lorem|nl2br}}
    </div>
</div>

<div class="col" width = "50%">
    <div class="dash-bg container-fluid  p-4">
        <div class="dash-bg-light container-fluid p-3">
            <h3 class="dash-title mb-3">Input <br> Deal Criteria</h3>
            {{ macros.input_target_nogo(selDevSym,input,side) }}
        </div>
    </div>
</div>
{% endblock %}


{% block scripts %}
    {{ parent() }}
    <div id="projDuration">{{projDuration}}</div>
    <script type="text/javascript" src="../../public/assets/js/custom/deal_criteria/form.js"></script>
{% endblock %}

