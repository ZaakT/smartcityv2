{% set sideBarName = "deal_criteria" %}
{% extends '/templates/common_page.twig' %}

{% import "/templates/navbar.twig" as navbar %}
{% block navbar %}{{ navbar.navbar(is_connected,is_admin,devises) }}{% endblock %}

{% import "/templates/sidebar.twig" as sidebar %}
{% import "/templates/second_bar.twig" as second_bar %}

{% block sidebar %}{{ sidebar.sidebar("deal_criteria_" ~ side) }}{% endblock %}
{% block title %}Deal Criteria{% endblock %}

{% if side == "customer" or side == "" %}
    {% import "/templates/deal_criteria/macro.twig" as macros %}
{% else %}
    {% import "/templates/deal_criteria/macro_supplier.twig" as macros %}
{% endif %}

{% block content %}

{{ second_bar.second_bar(username,is_admin,selDevName,selDevSym,part,selected) }}


<div class="row jumbotron text-light bg-dark m-5 p-3">
    <div class="col text-center">
        Define the Target level and "No Go" thresholds for the Deal across a selection of Financial, Societal & non monetisable impact metrics.
    </div>
</div>


    <div class="dash-bg container-fluid m-1 mt-5 ml-2 p-4">
        <div class="dash-bg-light container-fluid p-3">
            <h3 class="dash-title mb-3">Deal Criteria ({{side}})</h3>
            {{ macros.input_target_nogo(selDevSym,input) }}
        </div>
    </div>
{% endblock %}


{% block scripts %}
    {{ parent() }}
    <script type="text/javascript" src="../../public/assets/js/custom/deal_criteria/form.js"></script>
{% endblock %}

