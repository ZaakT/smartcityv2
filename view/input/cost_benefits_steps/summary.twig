    {% set names = [
        ["Capex", "capex"],
        ["Implementation", "implem"],
        ["Opex", "opex"],
        ["Revenues", "revenues"],
        ["Cash Releasing Benefits", "cashreleasing"],
        ["Wider Cash Benefits", "widercash"],
        ["Quantifiable Non Monetizable Benefits", "quantifiable"],
        ["Non Cash Benefits", "noncash"],
        ["Risks", "risks"]
    ] %}
{% endif %}
