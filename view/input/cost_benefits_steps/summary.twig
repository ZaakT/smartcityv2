        ["Equipment Revenues", "equipment_revenues"],
        ["Deployment Revenues", "deployment_revenues"],
        ["Operating Revenues", "operating_revenues"],
        ["Capex", "capex"],
        ["Deployment & Set-Up", "implem"],
        ["Opex", "opex"]
