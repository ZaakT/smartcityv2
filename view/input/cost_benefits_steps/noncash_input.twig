{% import "/templates/cost_benefits_in/macro_noncash.twig" as list %}
{% import "/templates/cost_benefits_in/macro_compo_guid.twig" as guid %}
{% import "/templates/cost_benefits_in/modal_noncash.twig" as modal %}

{% block title %}Project Scoping - Non Cash Benefits - INPUT{% endblock %}

{% block sidebar %}{{ sidebar.sidebar("cost_benefits",projID,ucID) }}{% endblock %}

{% block content %}

{{ second_bar.second_bar(username,is_admin,selDevName,selDevSym,part,selected,part2,selected2) }}

{#-------------- corps --------------#}
{% if selNonCash %}
<form id="form_noncash_input" name="form_noncash_input" action="?A=cost_benefits&amp;A2=noncash_inputed" method="post" onsubmit="return checkNonCashPeriod() && checkNonCashInput();">

<div class="container-fluid">
    <section class="row">
        <div class="col-lg-8 text-left">

            <h2 class="ml-5 mt-5">Non Cash Benefits</h2>
            {#-------------- jumbotron --------------#}
            <div class="row jumbotron m-4 p-2">
                <div class="col text-center">
                    <p class="text-justify">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis sit amet varius neque, eget facilisis urna. Nunc sit amet libero varius erat interdum tempus. Morbi elit diam, malesuada vel iaculis at, fermentum sed metus. Quisque finibus urna et lorem varius aliquam. Aliquam molestie massa non lorem tincidunt aliquam. Fusce ullamcorper euismod arcu eu laoreet. Sed nec faucibus sem. </p>
                </div>
            </div>

            {#-------------- tab input et total --------------#}
            {{ list.list_noncash_input(noncash_advice,noncash_user,selNonCash) }}
            {{ list.list_noncash_total(noncash_advice,noncash_user,selNonCash) }}

            {#-------------- bouton fl√®che --------------#}
            <div class="row m-3 text-center text-dark">
                <button class="btn btn-link offset-5 col-2 oi oi-arrow-circle-right next-button" title="arrow-circle-right" style="font-size:50px;" aria-hidden="true" onclick="submitForm('form_noncash');"></button>
            </div>
        </div>

        {#-------------- tab guide --------------#}
        <div class="col-lg-4 guideline">
        <h3 class="text-center mt-5 pt-2"> Guideline </h3>

        {{ guid.compo_guid(selected2,compo,nb_compo,nb_uc) }}
        </div>
    </section>
</div>

</form>
{% else %}
<h2 class="text-center">There is no noncash item, please contact an administrator</h2>
{% endif %}

{% endblock %}


