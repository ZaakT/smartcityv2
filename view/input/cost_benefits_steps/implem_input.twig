                {% if id_implem in implem_advice|keys %}
                    {% set test = true %}
                {% endif %}
            {% endfor %}
            {#-------------- tab input et total --------------#}
            {{ list.list_implem_input(selDevSym,implem_advice,implem_user,selImplem,ratio,nb_uc) }}

