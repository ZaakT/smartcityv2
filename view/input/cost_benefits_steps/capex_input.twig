{% extends '/input/cost_benefits_in.twig' %}

{% import "/templates/second_bar.twig" as second_bar %}
{% import "/templates/sidebar.twig" as sidebar %}
{% import "/templates/cost_benefits_in/macro_capex.twig" as list %}
{% import "/templates/cost_benefits_in/modal_capex.twig" as modal %}

{% block title %}Project Scoping - CAPEX INPUT{% endblock %}

{% block sidebar %}{{ sidebar.sidebar("cost_benefits",projID,ucID) }}{% endblock %}

{% block content %}

{{ second_bar.second_bar(username,part,selected,part2,selected2) }}

<div class="row jumbotron text-light m-5 bg-dark p-3">
    <div class="col text-center">
        <p class="text-justify">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis sit amet varius neque, eget facilisis urna. Nunc sit amet libero varius erat interdum tempus. Morbi elit diam, malesuada vel iaculis at, fermentum sed metus. Quisque finibus urna et lorem varius aliquam. Aliquam molestie massa non lorem tincidunt aliquam. Fusce ullamcorper euismod arcu eu laoreet. Sed nec faucibus sem. </p>
    </div>
</div>

{% if selCapex %}
<form id="form_capex_input" name="form_capex_input" action="?A=cost_benefits&amp;A2=capex&amp;A3=capex_selected&amp;projID={{projID}}&amp;ucID={{ucID}}" method="post" onsubmit="">
    
{{ list.list_capex_guid(capex_advice,capex_user,selCapex,compo,ratio) }}
{{ list.list_capex_input(capex_advice,capex_user,selCapex) }}

<div class="row text-center mt-2 mb-5">
    <div class="offset-4 col-4">
        <table class='table table-lg table-bordered table-responsive-lg'>
            <thead class="thead thead-dark">
                <tr>
                    <th scope="col">Capex Amortization Period (in years)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="col"><input type="number" min=0 step=1></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

{{ list.list_capex_total(capex_advice,capex_user,selCapex) }}

<div class="row m-3 text-center text-dark">
    <button class="btn btn-link offset-5 col-2 oi oi-arrow-circle-right next-button" title="arrow-circle-right" style="font-size:50px;" aria-hidden="true" onclick="submitForm('form_capex');"></button>
</div>

</form>
{% else %}
<h2 class="text-center">There is no capex, please contact an administrator</h2>
{% endif %}

{% endblock %}


