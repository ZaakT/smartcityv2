{% macro create_revenue(projID=0,ucID=0, type="equipment_revenues", sideBarName, listUcID, listUcsName) %}
	<div class="modal fade" id="createNewRevenueModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel3" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<form id="createRevenue-form" action="?A={{sideBarName}}&amp;A2={{type}}&amp;A3=create_revenue&amp;projID={{projID}}&amp;ucID={{ucID}}" method='post'>
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel3">Please enter the new revenue data.</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<div class="form-group row">
							<label for="name" class="col-sm-3 col-form-label">Name</label>
							<div class="col-sm-9">
								<input type="text" class="form-control" name="name" aria-describedby="nameHelp" placeholder="Enter a name" required>
							</div>
						</div>
						<div class="form-group row">
							<label for="origine" class="col-sm-3 col-form-label">Cost per unit</label>
							<div class="col-sm-9">
								<input type="text" class="form-control" name="cost_per_unit" placeholder="Enter a cost_per_unit">
							</div>
						</div>
						<div class="form-group row">
							<label for="origine" class="col-sm-3 col-form-label">Number of units</label>
							<div class="col-sm-9">
								<input type="text" class="form-control" name="number_of_units" placeholder="Enter a number_of_units">
							</div>
						</div>
						{% if listUcsName|length > 1 %}
							<div class="form-group row">
								<label for="origine" class="col-sm-3 col-form-label">Use Case</label>
								<div class="col-sm-9">
									<select class="form-control" name="useCase" id="useCase" required>
										{% for ucID in listUcID %}
											<option value={{ucID}} selected>
												{{listUcsName[ucID]}}
											</option>
										{% endfor %}
									</select>
								</div>
							{% endif %}
						</div>
						<div class="modal-footer">
							<a href="?A={{sideBarName}}&amp;A2={{type}}&amp;A3=create_revenue&amp;projID={{projID}}&amp;ucID={{ucID}}">
								<button type="submit" class="btn btn-dark">Create</button>
							</a>
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
{% endmacro %}
