{% macro create_xpex(projID=0,ucID=0, type="capex") %}
<div class="modal fade" id="createNewXpexModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel3" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="createXpex-form" action="?A=cost_benefits&amp;A2=create_xpex&amp;projID={{projID}}&amp;ucID={{ucID}}" method='post'>
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel3">Please enter the new {% if type == "capex" %}capex{% elseif type =="opex" %}opex{% elseif type =="deployment_costs"%}deployment and set-up{% endif %} item informations</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="name" class="col-sm-3 col-form-label">Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="name" id="name" aria-describedby="nameHelp" placeholder="Enter a name" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="description" class="col-sm-3 col-form-label">Description</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="description" id="description" placeholder="Enter a description">
                        </div>
                    </div>
                </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-dark">Create</button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </form>
    </div>
</div>    
{% endmacro %}


{% macro delete_xpex(idXpex,nameXpex,projID=0,ucID=0, type="capex") %}
<div class="modal fade" id="askDeleteXpex_{{ idXpex}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{% if type == "capex" %}Capex{% elseif type =="opex" %}Opex{% elseif type =="deployment_costs"%}Deployment and Set-up{% endif %} item deleting confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want to delete this {% if type == "capex" %}capex{% elseif type =="opex" %}opex{% elseif type =="deployment_costs"%}deployment and set-up{% endif %} item ({{ nameXpex }}) ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <a href="?A=cost_benefits&amp;A2=delete_xpex&amp;projID={{projID}}&amp;ucID={{ucID}}&amp;id={{ idXpex }}"><button type="button" class="btn btn-dark">Yes</button></a>
            </div>
        </div>
    </div>
</div> 
{% endmacro %}




