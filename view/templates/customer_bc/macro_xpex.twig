                    <th scope="col">{% if type == "capex" %}Capex{% elseif type =="opex" %}Opex{% elseif type =="deployment_costs"%}Deployment and Set-up{% endif %} Component</th>
                    <th scope="col">Total {% if type == "capex" %}Capex{% elseif type =="opex" %}Opex{% elseif type =="deployment_costs"%}Deployment and Set-up{% endif %} ( in {{selDevSym}} )</th>
                </tr>
                
            </thead>
            <tbody>
            {% for id_xpex,data in selXpex %}
                <tr id = "tr_{{ id_xpex }}" scope="row">
                    {% if id_xpex in xpex_advice|keys %}
                    <td scope="col">{{ xpex_advice[id_xpex]['name'] }}</td>
                    {% else %}
                    <td scope="col">{{ xpex_user[id_xpex]['name'] }}</td>
                    {% endif %}
