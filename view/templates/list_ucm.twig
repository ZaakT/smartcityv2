{% macro list_ucms(ucms, isTaken = false) %}

<div class="row text-center">
    <h6 id="createUserHelp" class="col text-danger font-italic">{{ isTaken ? "name already taken" : "" }}</h6>
</div>
<div class="row text-center">
    <div class="col m-5 list-table">
        <table class='table table-bordered table-striped table-responsive-lg'>
            <thead class="thead-dark text-center sticky-top">
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Last Modified Date</th>
                    <th scope="col">Creation Date</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <form>
                {% for ucm in ucms %}
                    <tr id = "ucm_{{ ucm[0] }}" class="" scope="row">
                        <td><input type="radio" id='radio'.{{ ucm[0] }} name="optradio"></td>
                        <td>{{ ucm[1] }}</td>
                        <td>{{ ucm[2] }}</td>
                        <td>...</td>
                        <td>...</td>
                        <td><a href="#"><span class="oi oi-trash text-dark" title="trash" aria-hidden="true" data-toggle="modal" data-target="#askDeleteUCMModal"></span></a></td>
                    </tr>
                {% endfor %}
                </form>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->

<div class="modal fade" id="createNewUCMModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="createUCM-form" action="?A=project_design&amp;A2=create_ucm" method='post'>
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel2">Please enter the new Use Cases Menu informations</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="name" class="col-sm-3 col-form-label">Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="name" id="name" aria-describedby="nameHelp" placeholder="Enter a name" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="description" class="col-sm-3 col-form-label">Description</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="description" id="description" placeholder="Enter a description">
                        </div>
                    </div>
                </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-dark">Create</button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </form>
    </div>
</div>

<div class="modal fade" id="askDeleteUCMModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">UCM deleting confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want to delete this UCM
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <a  href=""><button type="button" class="btn btn-dark">Yes</button></a>
            </div>
        </div>
    </div>
</div>
{% endmacro %}