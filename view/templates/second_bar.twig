{% macro second_bar(username,is_admin,devise_name="GBP",devise_sym="Â£", part, selected, part2="", selected2="") %}
<div class="row infos-bar align-content-center">
    <div class="col-lg text-left">
        <span class="text-uppercase">{{ part }}{{ selected ? " :" : "" }}</span>&ensp;<strong>{{ selected }}</strong>
        {% if part2 and selected2 %}
        <span class="mx-2">|</span>
        <span class="text-uppercase">{{ part2 }} :</span>&ensp;<strong>{{ selected2 }}</strong>
        {% endif %}
    </div>
    <div class="col-lg text-right">
        <span class="text-uppercase">Username : </span>&ensp;<strong>{{ username }}</strong>
        <span class="mx-2">|</span>
        <span class="text-uppercase">Role : </span>&ensp;<strong>{{is_admin ? "Admin" : "Common"}}</strong>
        <span class="mx-2">|</span>
        <span class="text-uppercase">Profile : </span>&ensp;<strong>{{isDev ? "Project Developper" : "Supplier"}}</strong>
        <span class="mx-2">|</span>
        <span class="text-uppercase">Currency :</span>&ensp;<strong>{{ devise_name }} <span id='currency'>({{ devise_sym }})</span></strong>
    </div>
</div>
{% endmacro %}