<div class="modal fade" id="askCreateEntity_{{ idSource }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="createEntity-form" action="?A=funding&amp;A2=create_entity" method='post'>
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel2">Please enter the new Entity informations</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="name" class="col-sm-3 col-form-label">Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="name" id="name" aria-describedby="nameHelp" placeholder="Enter a name" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="description" class="col-sm-3 col-form-label">Description</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="description" id="description" placeholder="Enter a description">
                        </div>
                    </div>
                    <input type="number" name="id_source" id="id_source" hidden value={{idSource}}>
                    <input type="number" name="scenID" id="scenID" hidden value={{scenID}}>
                </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-dark">Create</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </form>
    </div>
</div>    
{% endmacro %}

{% macro delete_entity(scenID,idSource,entities) %}

</form> {# it is to close the main form (to select the funding sources) #}
<div class="modal fade" id="askDeleteEntity_{{ idSource }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="deleteEntity-form" action="?A=funding&amp;A2=delete_entity" method='post'>
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel2">Please select the entity to delete !</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                        <select class="form-control" name="entity_to_delete" id="entity_to_delete">
                            {% for idEntity,entity in entities %}
                                <option name="{{idEntity}}" id="{{idEntity}}" value="{{idEntity}}">{{entity['name']}}</option>
                            {% endfor %}
                        </select>
                        <input type="number" name="id_source" id="id_source" hidden value={{idSource}}>
                        <input type="number" name="scenID" id="scenID" hidden value={{scenID}}>
                    </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-dark">Delete</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div> 
{% endmacro %}
