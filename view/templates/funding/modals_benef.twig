{% macro delete_benef(scenID,listBenef) %}
</form> {# it is to close the main form (to input sharing values) #}
<div class="modal fade" id="askDeleteBenef" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="deleteBenef-form" action="?A=funding&amp;A2=delete_benef" method='post'>
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel2">Please select the Beneficiary to delete !</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                        <select class="form-control" name="benef_to_delete" id="benef_to_delete">
                            {% for idBenef,benef in listBenef %}
                                <option name="{{idBenef}}" id="{{idBenef}}" value="{{idBenef}}">{{benef['name']}}</option>
                            {% endfor %}
                        </select>
                        <input type="number" name="scenID" id="scenID" hidden value={{scenID}}>
                    </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-dark">Delete</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div> 
{% endmacro %}
