    <div class="modal-dialog" role="document">
        <form id="createMeasure-form" action="?A=admin&amp;A2=manage_db&amp;A3=create_measure" method='post' oninput='passwordConfirmation.setCustomValidity(passwordConfirmation.value != password.value ? "Passwords do not match." : "")'>
            <div class="modal-content">
