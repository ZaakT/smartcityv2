{% macro create_measure(users, listGroups) %}
<div class="modal fade" id="createNewMeasureModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="createMeasure-form" action="?A=admin&amp;A2=manage_db&amp;A3=create_measure" method='post' oninput='passwordConfirmation.setCustomValidity(passwordConfirmation.value != password.value ? "Passwords do not match." : "")'>
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel2">Please enter the new measure informations</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="name" class="col-sm-3 col-form-label">Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="name" id="name" aria-describedby="nameHelp" placeholder="Enter a name" required >
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="user" class="col-sm-3 col-form-label">User</label>
                        <div class="col-sm-9">
                            <select class="form-control" name="user" id="user">
                                <option name="0" id="0" value="0">0 : All users</option>
                                {% for id_user,user in users %}
                                    <option name="{{user['id']}}" id="{{user['id']}}" value="{{user['id']}}">{{user['id']}} : {{user['username']}}</option>
                                {% endfor %}
                            </select>
                        </div>                
                        <label for="group" class="col-lg-3 col-form-label">Group</label>
                        <div class="col-lg-9">
                            <select id="group" name="group" class="form-control" aria-describedby="groupHelp" required>
                                <option value="0" selected>No Group</option>
                                {% for group in listGroups %}
                                    <option value="{{group['id']}}">{{group['id']}} : {{group['name']}}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="description" class="col-sm-3 col-form-label">Description</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="description" id="description" aria-describedby="descriptionHelp" placeholder="Enter a description" >
                        </div>
                    </div>
                </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-dark">Create</button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </form>
    </div>
</div>
{% endmacro %}


{% macro delete_measure(idMeasure,nameMeasure) %}
<div class="modal fade" id="askDeleteMeasure_{{ idMeasure }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Domain deleting confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want to delete this Domain ({{ nameMeasure }}) ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <a href="?A=admin&amp;A2=manage_db&amp;A3=delete_measure&amp;id={{ idMeasure }}"><button type="button" class="btn btn-dark">Yes</button></a>
            </div>
        </div>
    </div>
</div> 
{% endmacro %}
