                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="side" class="col-sm-3 col-form-label">Side</label>
                        <div class="col-sm-9">
                            <select class="form-control" name="side" id="side" required>
                                <option value = "customer" selected> Customer </option>
                                <option value = "supplier"> Supplier </option>
                                <option value = "projDev"> Project Developper </option>
                            </select>
                        </div>
                    </div>
                </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-dark">Create</button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </form>
    </div>
</div>    
{% endmacro %}

{% macro delete_xpex_cat(listUC, listCatXpex, itemName) %}
<div class="modal fade" id="deleteXpexCatModal" tabindex="-1" role="dialog" aria-labelledby="deleteXpexCatModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="deleteXpexCat-form" action="?A=admin&amp;A2=manage_db&amp;A3=delete_xpex_cat" method='post'>
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="deleteXpexCatModal">Select the categories to delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <div class="form-group col-sm-10">
                        <input type="text" class="form-control" name="itemName" id="itemName" aria-describedby="itemNameHelp" value="{{itemName}}" required hidden>

                        {% for ucID in listCatXpex|keys %}
