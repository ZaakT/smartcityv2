                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="unit" id="unit" aria-describedby="unitHelp" placeholder="Enter a unit">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="source" class="col-sm-3 col-form-label">Guidance Source</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="source" id="source" aria-describedby="sourceHelp" placeholder="Enter a source">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="range_min">Guidance : Min</label>
                                <input type="number" class="form-control" name="range_min" id="range_min" aria-describedby="minHelp" placeholder="Enter a indicative minimum">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="range_max">Guidance : Max</label>
