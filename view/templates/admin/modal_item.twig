{% macro create_item1(catItemName, UC) %} {# capex opex implem revenues #}
<div class="modal fade" id="createNewItem1Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="createItem1-form" action="?A=admin&amp;A2=manage_db&amp;A3=create_item_1&amp;cat={{ catItemName }}" method='post' oninput='passwordConfirmation.setCustomValidity(passwordConfirmation.value != password.value ? "Passwords do not match." : "")'>
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel2">Please enter the new item informations</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="name" class="col-sm-3 col-form-label">Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="name" id="name" aria-describedby="nameHelp" placeholder="Enter a name" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="description" class="col-sm-3 col-form-label">Description</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="description" id="description" aria-describedby="descriptionHelp" placeholder="Enter a description">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="uc_id" class="col-sm-3 col-form-label">Use Case (ID)</label>
                        <div class="col-sm-9">
                            <select class="selectpicker" name="uc_id" id="uc_id" aria-describedby="uc_id">
                                <option value="" disabled>Select Use Case ID</option>
                                {% for uc_id, uc in UC %}
                                <option value="{{ uc_id }}">{{ uc_id }} : {{ uc['name'] }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="unit" class="col-sm-3 col-form-label">Unit</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="unit" id="unit" aria-describedby="unitHelp" placeholder="Enter a unit">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="source" class="col-sm-3 col-form-label">Guidance Source</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="source" id="source" aria-describedby="sourceHelp" placeholder="Enter a source">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="range_min">Guidance : Min</label>
                                <input type="number" class="form-control" name="range_min" id="range_min" aria-describedby="minHelp" placeholder="Enter a indicative minimum">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="range_max">Guidance : Max</label>
                                <input type="number" class="form-control" name="range_max" id="range_max" aria-describedby="maxHelp" placeholder="Enter a indicative maximum">
                        </div>
                    </div>   
                </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-dark">Create</button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </form>
    </div>
</div>
{% endmacro %}

