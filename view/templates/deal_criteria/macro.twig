{% macro input_target_nogo(selDevSym, input, side) %} 
<form action="?A=deal_criteria&amp;A2=deal_criteria_input&amp;A3={{side}}" method="post" onsubmit="return checkInput());">

    <table id="input_target_nogo" class="table">

        <thead>
            <th></th>
            <th>No Go</th>
            <th>Order</th>
            <th>Target</th>
        </thead>

        <tbody>
            <tr>
                <th>Payback</th>
                <td><input id="payback_nogo" name="payback_nogo" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['payback_nogo']}}" oninput="checkInput(payback_nogo);" >&nbsp;months</td>
                <td> &ge; Greater Than or Equal To</td>
                <td><input id="payback_target" name="payback_target" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['payback_target']}}" oninput="checkInput(payback_target);">&nbsp;months</td>
            </tr>
            <tr>
                <th>Societal Payback</th>
                <td><input id="societal_payback_nogo" name="societal_payback_nogo" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['societal_payback_nogo']}}" oninput="checkInput(societal_payback_nogo);">&nbsp;months</td>
                <td> &ge; Greater Than or Equal To</td>
                <td><input id="societal_payback_target" name="societal_payback_target" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['societal_payback_target']}}" oninput="checkInput(societal_payback_target);">&nbsp;months</td>
            </tr>
            <tr>
                <th>ROI</th>
                <td><input id="roi_nogo" name="roi_nogo" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['roi_nogo']}}" oninput="checkInput(roi_nogo);">&nbsp;%</td>
                <td> &le; Less Than or Equal To</td>
               <td><input id="roi_target" name="roi_target" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['roi_target']}}" oninput="checkInput(roi_target);">&nbsp;%</td>
            </tr>
            <tr>
                <th>Societal ROI</th>
                <td><input id="societal_roi_nogo" name="societal_roi_nogo" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['societal_roi_nogo']}}" oninput="checkInput(societal_roi_nogo);">&nbsp;%</td>
                <td> &le; Less Than or Equal To</td>
                <td><input id="societal_roi_target" name="societal_roi_target" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['societal_roi_target']}}" oninput="checkInput(societal_roi_target);">&nbsp;%</td>
            </tr>
            <tr>
                <th>NPV</th>
                <td><input id="npv_nogo" name="npv_nogo" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['npv_nogo']}}" oninput="checkInput(npv_nogo);">&nbsp;{{selDevSym}}</td>
                <td> &le; Less Than or Equal To</td>
                <td><input id="npv_target" name="npv_target" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['npv_target']}}" oninput="checkInput(npv_target);">&nbsp;{{selDevSym}}</td>
            </tr> 
            <tr>
                <th>Societal NPV</th>
                <td><input id="societal_npv_nogo" name="societal_npv_nogo" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['societal_npv_nogo']}}" oninput="checkInput(societal_npv_nogo);">&nbsp;{{selDevSym}}</td>
                <td> &le; Less Than or Equal To</td>
                <td><input id="societal_npv_target" name="societal_npv_target" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['societal_npv_target']}}" oninput="checkInput(societal_npv_target);">&nbsp;{{selDevSym}}</td>
            </tr>
            <tr>
                <th>Non Quantifiable Benefits Rating</th>
                <td><input id="nqbr_nogo" name="nqbr_nogo" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['nqbr_nogo']}}"oninput="checkInput(nqbr_nogo);"></td>
                <td> &le; Less Than or Equal To</td>
                <td><input id="nqbr_target" name="nqbr_target" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['nqbr_target']}}" oninput="checkInput(nqbr_target);"></td>
            </tr>

            <tr>
                <th>Risk</th>
                <td><input id="risks_rating_nogo" name="risks_rating_nogo" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['rr_nogo']}}" oninput="checkInput(risks_rating_nogo);"></td>
                <td> &ge; Greater Than or Equal To</td>
                <td><input id="risks_rating_target" name="risks_rating_target" class="text-center py-1 form-control-inline" type="number" min=0 step=0.01 required value="{{input['rr_target']}}" oninput="checkInput(risks_rating_target);"></td>
            </tr>

        </tbody>

    </table>

    <div class="text-center">
        <span id="errorInput" style="color:red;"></span>
    </div>

    <div class="text-center">
        {# <button type="button" class="btn btn-outline-secondary m-3" onclick="filldefault();">
            default
        </button> #}

        <button type="submit" class="btn btn-outline-dark m-3" onsubmit=" return checkInput();" >
            Save
        </button>
    </div>

</form>

{% endmacro %}