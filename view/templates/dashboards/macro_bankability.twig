                {% for ucID in list_ucs %}
                    {% if ucID in selUCS %}  
                        {% set nb2 = nb2 + 1 %}
                    {% endif %}
                {% endfor %}
                <th class="" scope="col" colspan={{nb2}}>{{meas[measID]['name']}}</th>
            {% endfor %}
        </tr>
        <tr>
            {% for measID,list_ucs in scope %}
                {% for ucID in list_ucs %}
                    {% if ucID in selUCS %}                    
                    <th class="bank_score" scope="col" colspan=1>{{ucs[ucID]['name']}}</th>
                    {% endif %}
