            {% endfor %}
        </tr>
        {# <tr>
            {% for measID,list_ucs in scope %}
                {% for ucID in list_ucs %}
                    {% if ucID in selUCS %} 
                    <th class="" scope="col" colspan=1>Value</th>
                    {# <th class="" scope="col" colspan=1>Score / 10</th>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </tr> #}
    </thead>
    <tbody>
        <tr>
            <td class="item" scope="row">Return per {{selDevSym}}  invested</td>
            {% for measID,list_ucs in scope %}
                {% for ucID in list_ucs %}
                {% if ucID in selUCS %} 
