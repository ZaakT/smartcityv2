{% macro sel_buttons(scope,ucs,measures) %}
<div class="row text-center">
    <div class="col mt-5 mx-5 list-table">
        <table id="uc_table" class='table table-sm table-bordered table-striped table-responsive-lg'>
            <thead class="thead-dark text-center sticky-top">
                <tr>
                    <th scope="col" class="check-col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Measure</th>
                </tr>
            </thead>
            <tbody>
                {% for measID,list_ucs in scope %}
                    {% for ucID in list_ucs %}
                        <tr id = "tr_{{ucID}}" scope="row" class="meas_{{ucs[ucID]['id_meas']}}">
                            <td class="check-col align-middle"><input type="checkbox" onclick="countChecked_bankUC('form_bankUC');" class="uc" id='{{ucID}}' name="{{ucID}}"></td>
                            <td class="font-weight-bold">{{ ucs[ucID]['name'] }}</td>
                            <td>{{ ucs[ucID]['description'] }}</td>
                            <td>{{ ucs[ucID]['name_meas'] }}</td>
                        </tr>
                    {% endfor %}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endmacro %}

{% macro financial(scope,meas,ucs,selUCS,ROI,payback,score) %}
<table id="financial_bank" class='table table-sm table-bordered table-striped table-responsive-lg'>
    <thead class="thead-light text-center">
        <tr>
            <th class="bank_values" scope="col" rowspan=3></th>
            {% for measID,list_ucs in scope %}
                {% set nb2 = 0 %}
                {% for ucID in list_ucs %}
                    {% if ucID in selUCS %}  
                        {% set nb2 = nb2 + 2 %}
                    {% endif %}
                {% endfor %}
                <th class="" scope="col" colspan={{nb2}}>{{meas[measID]['name']}}</th>
            {% endfor %}
        </tr>
        <tr>
            {% for measID,list_ucs in scope %}
                {% for ucID in list_ucs %}
                    {% if ucID in selUCS %}                    
                    <th class="bank_score" scope="col" colspan=2>{{ucs[ucID]['name']}}</th>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </tr>
        <tr>
            {% for measID,list_ucs in scope %}
                {% for ucID in list_ucs %}
                    {% if ucID in selUCS %} 
                    <th class="" scope="col" colspan=1></th>
                    <th class="" scope="col" colspan=1>Score / 10</th>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="item" scope="row">Return per £ invested</td>
            {% for measID,list_ucs in scope %}
                {% for ucID in list_ucs %}
                {% if ucID in selUCS %} 
                    <td class="" scope="col" colspan=1>£ {{ROI[ucID]['value']|number_format(2, '.', ',')}}</td>
                    <td class="" scope="col" colspan=1>{{ROI[ucID]['score']|number_format(2, '.', ',')}}</td>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </tr>
        <tr>
            <td class="item" scope="row">Payback / Project Duration</td>
            {% for measID,list_ucs in scope %}
                {% for ucID in list_ucs %}
                {% if ucID in selUCS %} 
                    <td class="" scope="col" colspan=1>{{payback[ucID]['value']|number_format(2, '.', ',')}}%</th>
                    <td class="" scope="col" colspan=1>{{payback[ucID]['score']|number_format(2, '.', ',')}}</td>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </tr>
        <tr class="text-primary font-weight-bold">
            <td class="item text-primary" scope="row">Financial Bankability Score</td>
            {% for measID,list_ucs in scope %}
                {% for ucID in list_ucs %}
                {% if ucID in selUCS %} 
                <td class="" scope="col" colspan=1></td>
                <td class="" scope="col" colspan=1>{{score[ucID]|number_format(2, '.', ',')}}</td>
                {% endif %}
                {% endfor %}
            {% endfor %}
        </tr>
    </tbody>
</table>
{% endmacro %}


