{% macro ask_redir(projID = 0, ucID = 0, nbUC = 1, nbConfirmed = 0) %}
<div class="modal fade" id="askRedir" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog-centered modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Redirection choice</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {% if idDev or nbConfirmed > 0 %}
                    Where do you want to go now ?
                {% endif %}
                {% if isSup and nbUC != nbConfirmed %}
                    {{ nbConfirmed == 0 ?  "<p class = 'text-danger'>": "<br><p>"}}
                    Use Case(s) confirmed : {{nbConfirmed}}/{{nbUC}}
                    </p>
                {% endif %}
            </div>
            <div class="modal-footer justify-content-center">
            {% if isDev %}
                <a href="?A=funding&amp;A2=scenario"><button type="button" class="btn btn-secondary">Funding</button></a>
                <a href="?A=business_model&amp;A2=project"><button type="button" class="btn btn-secondary">Business Model</button></a>
                <a href="?A=dashboards&amp;A2=project"><button type="button" class="btn btn-dark">Dashboards</button></a>
                <a href="?A=comp_projects&amp;A2=projects"><button type="button" class="btn btn-dark">Comparison</button></a>
            {% elseif isSup %}
                <a href="?A=customer_dashboards"><button type="button" class="btn btn-dark" {{nbConfirmed == 0 ? "disabled" }}>Customer Dashboards</button></a>
                <a href="?A=supplier_dashboards"><button type="button" class="btn btn-dark" {{nbConfirmed == 0 ? "disabled" }}>Supplier Dashboards</button></a>

            {% endif %}
            </div>
        </div>
    </div>
</div>
{% endmacro %}