{% macro summary(meas,ucs,selScope,list_checks) %}
{% set symb = ["x","check","media-record"] %}
{% set color = ["text-danger","text-success","text-warning"] %}

<div class="row m-5 text-center">
    <div class="offset-3 col-6 list-table">
        <table class='table table-sm table-bordered table-responsive-lg text-center'>
            <thead class="thead thead-light text-center">
                <tr>
                    <th scope="col">To Be Completed</th> 
                    <th scope="col">Left Blank</th>
                    <th scope="col">Completed</th> 
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="col"><span title="{{symb[0]}}" class="oi oi-{{symb[0]}} {{color[0]}}"></span></td>
                    <td scope="col"><span title="{{symb[2]}}" class="oi oi-{{symb[2]}} {{color[2]}}"></span></td>
                    <td scope="col"><span title="{{symb[1]}}" class="oi oi-{{symb[1]}} {{color[1]}}"></span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row m-5 text-center">
    <div class="col list-table summary_table">
        <table id="summary_table" class='table table-sm table-bordered table-responsive-lg text-center'>
            <thead class="thead thead-light text-center">
                <tr>
                    <th rowspan=2 scope="col"></th>
                    {% for sel_meas,sel_ucs in selScope %}
                    <th colspan={{sel_ucs|length}} scope="col">{{meas[sel_meas]['name']}}</th>
                    {% endfor %}
                </tr>
                <tr>
                    {% for sel_meas,sel_ucs in selScope %} 
                        {% for uc in sel_ucs %}
                        <th scope="col">{{ucs[uc]['name']}}</th>
                        {% endfor %}
                    {% endfor %}   
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="item">Capex</td>
                    {% for sel_meas,sel_ucs in selScope %} 
                        {% for uc in sel_ucs %}
                        <td scope="col"><span title="{{symb[list_checks[uc]['capex']]}}" class="oi oi-{{symb[list_checks[uc]['capex']]}} {{color[list_checks[uc]['capex']]}}"></span></td>
                        {% endfor %}
                    {% endfor %} 
                </tr>
                <tr>
                    <td class="item">Implementation</td>
                    {% for sel_meas,sel_ucs in selScope %} 
                        {% for uc in sel_ucs %}
                        <td scope="col"><span title="{{symb[list_checks[uc]['implem']]}}" class="oi oi-{{symb[list_checks[uc]['implem']]}} {{color[list_checks[uc]['implem']]}}"></span></td>
                        {% endfor %}
                    {% endfor %} 
                </tr>
                <tr>
                    <td class="item">Opex</td>
                    {% for sel_meas,sel_ucs in selScope %} 
                        {% for uc in sel_ucs %}
                        <td scope="col"><span title="{{symb[list_checks[uc]['opex']]}}" class="oi oi-{{symb[list_checks[uc]['opex']]}} {{color[list_checks[uc]['opex']]}}"></span></td>
                        {% endfor %}
                    {% endfor %} 
                </tr>
                <tr>
                    <td class="item">Revenues</td>
                    {% for sel_meas,sel_ucs in selScope %} 
                        {% for uc in sel_ucs %}<td scope="col"><span title="{{symb[list_checks[uc]['revenues']]}}" class="oi oi-{{symb[list_checks[uc]['revenues']]}} {{color[list_checks[uc]['revenues']]}}"></span></td>
                        {% endfor %}
                    {% endfor %} 
                </tr>
                <tr>
                    <td class="item">Cash Releasing Benefits</td>
                    {% for sel_meas,sel_ucs in selScope %} 
                        {% for uc in sel_ucs %}
                        <td scope="col"><span title="{{symb[list_checks[uc]['cashreleasing']]}}" class="oi oi-{{symb[list_checks[uc]['cashreleasing']]}} {{color[list_checks[uc]['cashreleasing']]}}"></span></td>
                        {% endfor %}
                    {% endfor %} 
                </tr>
                <tr>
                    <td class="item">Wider Cash Benefits</td>
                    {% for sel_meas,sel_ucs in selScope %} 
                        {% for uc in sel_ucs %}
                        <td scope="col"><span title="{{symb[list_checks[uc]['widercash']]}}" class="oi oi-{{symb[list_checks[uc]['widercash']]}} {{color[list_checks[uc]['widercash']]}}"></span></td>
                        {% endfor %}
                    {% endfor %} 
                </tr>
                <tr>
                    <td class="item">Non Cash Benefits</td>
                    {% for sel_meas,sel_ucs in selScope %} 
                        {% for uc in sel_ucs %}
                        <td scope="col"><span title="{{symb[list_checks[uc]['noncash']]}}" class="oi oi-{{symb[list_checks[uc]['noncash']]}} {{color[list_checks[uc]['noncash']]}}"></span></td>
                        {% endfor %}
                    {% endfor %} 
                </tr>
                <tr>
                    <td class="item">Risks</td>
                    {% for sel_meas,sel_ucs in selScope %} 
                        {% for uc in sel_ucs %}
                        <td scope="col"><span title="{{symb[list_checks[uc]['risks']]}}" class="oi oi-{{symb[list_checks[uc]['risks']]}} {{color[list_checks[uc]['risks']]}}"></span></td>
                        {% endfor %}
                    {% endfor %} 
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endmacro %}