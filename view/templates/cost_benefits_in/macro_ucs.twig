{% macro list_ucs(selScope,ucs,measures) %}

<div class="row text-center">
    <div class="col mx-5 list-table">
        <table class='table table-bordered table-striped table-responsive-lg'>
            <thead class="thead-dark text-center sticky-top">
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Measure</th>
                </tr>
                
            </thead>
            <tbody>
            {% for meas,list_ucs in selScope %}
                {% for uc in list_ucs %}
                <tr id = "tr_{{ uc }}" scope="row">
                    <td scope="col" class="check-col"><input type="radio" id='radio_uc' name="radio_uc" value="{{ uc }}" required></td>
                    <td scope="col">{{ ucs[uc]['name'] }}</td>
                    <td scope="col">{{ ucs[uc]['description'] }}</td>
                    <td scope="col">{{measures[meas]['name']}}</td>
                </tr>                    
                {% endfor %}
                {% if meas != selScope|keys|last %}
                <tr><td colspan=4></td></tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endmacro %}