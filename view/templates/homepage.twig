{% extends 'common_page.twig' %}

{% import "navbar.twig" as navbar %}
{% block navbar %}{{ navbar.navbar2(false,false) }}{% endblock %}

{% block title %}Homepage{% endblock %}

{% block content %}
<div class="">
    <div class="row my-5">
        <div class="col-lg-6 text-center">
            <img src="../../public/img/colorbannew.png" class="img-fluid" alt="Responsive image"></img>
        </div>
        <div class="col-lg-5">
            <h2 class="text-center">Decision Support Toolkit<br>Value and Financial modeling</h2>
            <h5 class="text-center">Version 2.0.0</h5>
            <form class="my-5 p-5 bg-light">
                <div class="form-group row">
                    <label for="inputLogin" class="col-sm-2 col-form-label">Login</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputLogin" aria-describedby="loginHelp" placeholder="Enter your login">
                        <small id="loginHelp" class="form-text text-muted">If you have not received your login by email, please contact an administrator.</small>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputPassword" placeholder="Enter your password">
                    </div>
                </div>
                {# <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div> #}
                <button type="submit" class="btn btn-primary">Log in</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
