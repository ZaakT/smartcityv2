{% extends '/templates/common_page.twig' %}
{% import "/templates/traductions.twig" as traduction %}
{% import "/templates/navbar.twig" as navbar %}
{% block navbar %}{{ navbar.navbar(is_connected,is_admin,devises) }}{% endblock %}

{% block title %}Home Page{% endblock %}

{% block content %}
<div class="row mt-3">
    <div class="offset-4 col-4">
        <img class="img-fluid" src='../uploads/logos/{{logoName}}' alt="Responsive image"></img>
    </div>
</div>
<div class="row m-5"> </div>
<div class="row align-content-center mt-5" >
    <div class="col-lg">
        <h1 class="text-center text-dark font-weight-bold mb-3">{{traduction.getText("home_urbatisName")}}</h1>
        <h3 class="text-center text-dark">{{traduction.getText("dst")}}<br>{{traduction.getText("home_1")}}</h3>
        <h6 class="text-center text-dark">Version 2.1.0</h6>
        <h5 class="text-center my-5 text-uppercase">{{traduction.getText("home_2")}}</h5>
    </div>
    <div class="col-lg">
        <h3 class="text-center my-5">{{traduction.getText("home_hello")}} {{ username }}</h3>
        <h3 class="text-center my-5">{{traduction.getText("home_language")}} {{ language }}</h3>
    </div>
</div>

{% endblock %}
