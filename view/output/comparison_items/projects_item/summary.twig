{% extends '/output/comparison_items/comp_projects.twig' %}

{% import "/templates/navbar.twig" as navbar %}
{% block navbar %}{{ navbar.navbar(is_connected,is_admin,devises) }}{% endblock %}

{% import "/templates/sidebar.twig" as sidebar %}
{% block sidebar %}{{ sidebar.sidebar("comp_projects_"~ side) }}{% endblock %}

{% import "/templates/comparison/macro_projects.twig" as macro %}

{% block title %}Compare Projects - Summary{% endblock %}

{% block content %}
<div class="row jumbotron text-light m-5 bg-dark p-3 text-center">
    <h5>Below is a description (scope and duration) for the projects to be compared.</h5>
</div>

{{ macro.summary_projects(projects,projectsData,measures,ucs) }}

<div class="row m-3 text-center text-dark">
    <button class="btn btn-link offset-5 col-2 oi oi-arrow-circle-right next-button" title="arrow-circle-right" style="font-size:50px;" aria-hidden="true" onclick="window.location.assign('?A=comp_projects&amp;A2=finsoc_comp&amp;side={{side}}');"></button>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-6 px-0">
            <div class="dash-bg container-fluid m-1 ml-2 p-4">
                {# Scope #}
                <div class="dash-bg-light container-fluid p-3">
                    {{macro.scope(UCs, projects, projectsData, UCsSelected)}}
                </div>  

                {# # OF UC #}
                <div class="dash-bg-light container-fluid p-3 mt-4">
                <h3 class="dash-title mb-3">Cumulated Net Cash</h3>
                    <span id="chart_cumul_net_cash"><span>
                </div>    
            </div>            
            
            {# BUGDET #}


        </div>


        <div class="col-6">
            <div class="dash-bg container-fluid m-1 ml-2 p-4">
                {# KEY DATES #}
                <div class="dash-bg-light container-fluid p-3">
                <h3 class="dash-title mb-3">Schedule</h3>
                    {{ macros.key_dates(scope,ucs,keydates_uc,uc_completed, propKeyDates) }}
                </div>
            </div>    
            <div class="dash-bg container-fluid m-1 ml-2 mt-4 p-4">
                <div class="dash-bg-light container-fluid p-3">
                <h3 class="dash-title mb-3">Key Financials</h3>
                    {{ macros.costbenefits(years, cumulnetcashTot, cumulnetsoccashTot) }}
                </div>
            </div>



        </div>
        
    </div>

    </section>
</div>


{% endblock %}
